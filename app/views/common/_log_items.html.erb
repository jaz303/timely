
<table class='grid' cellspacing='0' cellpadding='0'>
  <tr>
    <th colspan='3'>Recent Activity</th>
  </tr>
  <% log_items.each do |i| %>
    <tr class='<%= cycle(:odd, :even) %>'>
      <td width='25' class='status-icon'><%= icon(i.action_icon) %></td>
      <td width='100'><%= i.created_at.to_s(:long) %></td>
      <td><%= autolink_log_item(i) %></td>
    </tr>
  <% end %>
</table>
