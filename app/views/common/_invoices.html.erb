
<table class='grid' cellspacing='0' cellpadding='0'>
  <tr>
    <th colspan='5' class='overall-title'>Invoices</th>
  </tr>
  <tr>
    <th>Ref.</th>
    <th>Due</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Status</th>
  </tr>
  <% if invoices.empty? %>
    <tr>
      <td colspan='5' class='empty'>This agreement has no invoices yet</td>
    </tr>
  <% else %>
    <% invoices.each do |i| %>
      <tr class='<%= cycle(:odd, :even) %>'>
        <td><%= h(i.reference) %></td>
        <td><%= h(i.due_on.to_s(:short)) %></td>
        <td><%= h(i.description) %></td>
        <td><%= h(i.amount) %></td>
        <td><%= invoice_status(i) %></td>
      </tr>
    <% end %>
  <% end %>
</table>
